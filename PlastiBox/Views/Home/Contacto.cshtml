<h1>¿Tienes dudas?, envianos un mensaje</h1>
<script>
    /* Función para obtener fecha y hora en formato JSon */
    function GetTime(){
        var url = "@Url.Action("GetTime","Home")";
        fetch(url).then(response => response.json()).then(data => { 
            var jdata = JSON.parse(data);
            alert(jdata["time"]);
        })
    }
</script>
<button onclick="GetTime()">Obtener fecha</button>